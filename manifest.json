{
  "manifest_version": 2,
  "name": "Zyncco",
  "version": "1.0.0",
  "author": "Zyncco <support@zync.co>",
  "homepage_url": "https://zync.co",
  "description": "End-to-end encrypted cloud clipboard synchronization.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_title": "Zyncco",
    "default_popup": "/popup/index.html"
  },
  "oauth2": {
    "client_id": "958433754089-3uesevgsreu09ba7ba5svsbfh5jfhcrf.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "persistent": true,
    "scripts": [
      "node_modules/pako/dist/pako.js",
      "credential.js",
      "zync.js"
    ]
  },
  "permissions": [
    "background",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite",
    "tabs",
    "storage",
    "identity"
  ],
  "optional_permissions": []
}
